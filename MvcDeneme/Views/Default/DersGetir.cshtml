@model MvcDeneme.Models.EntitiyFramework.TBLDERSLER
@{
    ViewBag.Title = "DersGetir";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("DersGuncelle", "Default", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(d => d.DERSAD)
        @Html.TextBoxFor(d => d.DERSAD, new { @class = "form-control" })
    </div>

    @Html.HiddenFor(d => d.DERSID)

    <div style="margin-top:15px">
        <button class="btn btn-info">Güncelle</button>

    </div>
}
